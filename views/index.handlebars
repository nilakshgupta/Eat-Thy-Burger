<div class="container">  
  <div class="jumbotron center-align"> 
        <h1> Eat-thy-Burger! </h1>
        <hr>
  </div>

<div class="row text-center">
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading">Devour Thy Burger!!</div>
              <div id="burgers-added" class="panel-body">
                <hr>
                {{#each burgers}}
                {{#unless devoured}}
                <form method="POST" action="/burgers/update/{{id}}?_method=PUT" class="form-inline">
                    <div class="form-group">
                      <input type="hidden" name="devoured" value="1"/>
                      <p class="form-control-static">{{ burger_name }}</p>
                    </div>
                    <button id="burger-id{{id}}" type="submit" class="btn btn-info btn-xs">Devour!
                    <span class="glyphicon glyphicon-cutlery"></span>
                    </button>
                    <hr>
                </form>
                {{/unless}}
                {{/each}}
              </div>
            </div>
          </div>
  
           <div class="col-md-3" style="margin-left: 45px">
            <form method="POST" action="/burgers/create" class="form-inline">
              <div class="form-group">
                <input type="hidden" name="devoured" value="0"/>
                <input name="burger" type="text" class="form-control" id="burger" placeholder= "Make your own!!" />
              </div>
              <button type="submit" class="btn btn-default btn-md">Add Burger!</button>
            </form>
           </div> 

          <div class="col-md-4" style="margin-left: 50px">
            <div class="panel panel-default">
              <div class="panel-heading">Devoured Burgers!!</div>
              <div id="burgers-devoured" class="panel-body">
                <hr>
                {{#each burgers}}
                {{#if devoured}}
            <form method="POST" action="/burgers/delete/{{id}}?_method=DELETE" class="form-inline">
                <div class="form-group">
                  <label class="sr-only">Burgers Devoured!!</label>
                  <p class="form-control-static">{{ burger_name }}</p>
                </div>
                <button id="burger-id{{id}}" type="submit" class="btn btn-warning btn-xs">Delete Burger
                <span class="glyphicon glyphicon-remove-circle"></span>
                </button>
                <hr>
            </form>
                {{/if}}
                {{/each}}
              </div>
            </div>
          </div>
</div>
</div>
